{
  "python.formatting.provider": "black",
  // https://github.com/sumneko/lua-language-server/wiki/Libraries
  "Lua.workspace.library": [
    "./TeXLuaCATS/LuaTeX/library",
    "${addons}/busted/module/library",
    "${3rd}/luassert/library"
  ],
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.rulers": [80]
  },
  "Lua.diagnostics.disable": [
    "duplicate-set-field",
    "param-type-mismatch"
  ],
  "files.exclude": {
    "**/_minted*/": true,
    "**/*.aux": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.gls": true,
    "**/*.hd": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.synctex.gz": true,
    "**/*.synctex": true,
    "**/*.synctex*": true,
    "**/*.tar.gz": true,
    "**/*.toc": true
  },
  // "latex-workshop.latex.recipes": [
  //   {
  //     "name": "luatex",
  //     "tools": ["luatex"]
  //   }
  // ],
  // "latex-workshop.latex.tools": [
  //   {
  //     "name": "luatex",
  //     "command": "luatex",
  //     "args": [
  //       "--synctex=1",
  //       "--interaction=nonstopmode",
  //       "--file-line-error",
  //       "%DOC%"
  //     ],
  //     "env": {}
  //   }
  // ],
  "Lua.workspace.checkThirdParty": false,
  "Lua.format.defaultConfig": {
    "indent_style": "space",
    "indent_size": "2"
  },
  "Lua.format.enable": true
}
